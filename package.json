{
  "name": "docker-meta",
  "description": "GitHub Action to extract metadata (tags, labels) for Docker",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build && uglifyjs dist/index.js -o dist/index.js -b",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "yarn run format && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-docker-meta.git"
  },
  "keywords": [
    "actions",
    "docker",
    "meta",
    "tag",
    "label"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.4.0",
    "@actions/github": "^5.0.0",
    "@octokit/types": "6.27.2",
    "csv-parse": "^4.15.4",
    "handlebars": "^4.7.7",
    "moment": "^2.29.1",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "15.12.2",
    "@vercel/ncc": "^0.28.5",
    "dotenv": "10.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.4",
    "jest-runtime": "^27.0.4",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.3.2",
    "uglify-js": "^3.13.7"
  }
}